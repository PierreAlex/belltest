<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Bell shopping test</display-name>
	<servlet>
		<servlet-name>ShoppingListServlet</servlet-name>
		<servlet-class>web.ShoppingListServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>ItemDescriptionServlet</servlet-name>
		<servlet-class>web.ItemDescriptionServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AddToCartServlet</servlet-name>
		<servlet-class>web.AddToCartServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CartListServlet</servlet-name>
		<servlet-class>web.CartListServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>ShoppingListServlet</servlet-name>
		<url-pattern>/ShoppingListServlet</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>ItemDescriptionServlet</servlet-name>
		<url-pattern>/ItemDescriptionServlet</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>AddToCartServlet</servlet-name>
		<url-pattern>/AddToCartServlet</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>CartListServlet</servlet-name>
		<url-pattern>/CartListServlet</url-pattern>
	</servlet-mapping>


</web-app>
